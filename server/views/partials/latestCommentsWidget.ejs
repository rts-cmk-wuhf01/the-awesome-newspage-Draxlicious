<h3>Latest Comments</h3>
<% latestComment.forEach(comment => {%>
<% let now = new Date(comment.dateTime); %>
    <!-- Single Comments -->
    <div class="single-comments d-flex">
        <div class="comments-thumbnail mr-15">
            <img src="<%= comment.img %>" alt="">
        </div>
        <div class="comments-text">
            <a href="#"><%= comment.name%> <span>on</span> <%= comment.job%></a>
            <p><%= dateAndTime.format(now, 'HH:MM A, MMMM, YYYY') %></p>
        </div>
    </div>
<%})%>
        