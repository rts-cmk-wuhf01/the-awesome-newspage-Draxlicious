<!-- World News -->
                <div class="col-12 col-md-5 col-lg-3">
                    <div class="section-heading">
                        <h6>World News</h6>
                    </div>

                    <!-- Single Post -->
                    <div class="single-blog-post style-2">
                    <% worldNews.forEach(news => { %>
                    <% let now = new Date(news.article_date); %>
                        <div class="post-thumb">
                            <a href="#"><img src="/img/bg-img/<%= news.image_name %>" alt=""></a>
                        </div>
                        <div class="post-data">
                            <a href="#" class="post-title">
                                <h6><%= news.article_title %></h6>
                            </a>
                            <div class="post-meta">
                                <div class="post-date"><a href="#"> <%= dateAndTime.format(now, 'MMMM DD, YYYY') %></a></div>
                            </div>
                        </div>
                        <%})%>
                    </div>
                </div>