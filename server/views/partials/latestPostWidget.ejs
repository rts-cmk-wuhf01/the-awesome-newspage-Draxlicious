<!-- Single Featured Post -->

<% latestPostWidget.forEach(post =>{ %>
<% let now = new Date(post.dateTime); %>
    <div class="single-blog-post small-featured-post d-flex">
        <div class="post-thumb">
            <a href="#"><img src="<%= post.fk_article_image_id %>" alt=""></a>
        </div>
        <div class="post-data">
            <a href="#" class="post-catagory"></a>
            <div class="post-meta">
                <a href="#" class="post-title">
                    <h6><%= post.article_content %></h6>
                </a>
                <p class="post-date"><span><%= post.article_date %></span>
            </div>
        </div>
    </div>
<%})%>