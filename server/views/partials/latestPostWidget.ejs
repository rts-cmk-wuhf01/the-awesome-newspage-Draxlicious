<!-- Single Featured Post -->

<% latestPost.forEach(post =>{ %>
<% let now = new Date(post.dateTime); %>
    <div class="single-blog-post small-featured-post d-flex">
        <div class="post-thumb">
            <a href="#"><img src="<%= post.img %>" alt=""></a>
        </div>
        <div class="post-data">
            <a href="#" class="post-catagory"><%= post.name %></a>
            <div class="post-meta">
                <a href="#" class="post-title">
                    <h6><%= post.text %></h6>
                </a>
                <p class="post-date"><span><%= dateAndTime.format(now, 'MMMM DD, YYYY') %></span>
            </div>
        </div>
    </div>
<%})%>