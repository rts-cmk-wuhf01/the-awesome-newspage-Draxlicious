<div class="blog-posts-area">

                        <!-- Single Featured Post -->
                        <% latestPostArea.forEach(post => {%> 
                        <div class="single-blog-post featured-post mb-30">
                            <div class="post-thumb">
                                <a href="#"><img src="/img/bg-img/<%= post.image_name %>" alt=""></a>
                            </div>
                            <div class="post-data">
                                <a href="/post/<%= post.article_id %>" class="post-catagory"><%= post.author_title %></a>
                                <a href="/post/<%= post.article_id %>" class="post-title">
                                    <h6><%= post.article_title %></h6>
                                </a>
                                <div class="post-meta">
                                    <p class="post-author">By <a href="#"><%= post.author_name %></a></p>
                                    <p class="post-excerp"><%= post.article_content %></p>
                                    <!-- Post Like & Post Comment -->
                                    <div class="d-flex align-items-center">
                                        <a href="#" class="post-like"><img src="/img/core-img/like.png" alt=""> <span><%= post.article_likes %></span></a>
                                        <a href="#" class="post-comment"><img src="/img/core-img/chat.png" alt=""> <span><%= post.article_comment %></span></a>
                                    </div>
                                </div>
                            </div>
                        </div>
<%})%>
                    </div>